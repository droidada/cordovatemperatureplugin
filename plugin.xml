<?xml version='1.0' encoding='utf-8'?>
<plugin id="com-droidada-cordova-temperature-plugin" 
        version="0.0.1" 
        xmlns="http://apache.org/cordova/ns/plugins/1.0" 
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>TemperaturePlugin</name>
    
    <js-module name="TemperaturePlugin" src="www/TemperaturePlugin.js">
        <clobbers target="cordova.plugins.TemperaturePlugin" />
    </js-module>

    <asset src="www/TemperaturePlugin.js" target="js/TemperaturePlugin.js"/>

    <engines>
        <engine name="cordova" version=">=3.4.0"/>
    </engines>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="Temperature">
            <param name="android-package"
                    value="com.droidada.plugin.Temperature"/>
            </feature>
        </config-file>
        <source-file src="src/android/com/droidada/plugin/Temperature.java" 
        target-dir="src/android/com/droidada/plugin" />
    </platform>
</plugin>
